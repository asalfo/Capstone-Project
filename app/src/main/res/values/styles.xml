    <resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="drawerArrowStyle">@style/DrawerIconStyle</item>

    </style>

    <style name="DrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">

    </style>



        <style name="wrap">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
        </style>

        <style name="BaseShadowTextStyle" parent="@style/wrap">
            <item name="android:shadowColor">@color/black</item>
            <item name="android:shadowDx">0.0</item>
            <item name="android:shadowDy">-1.0</item>
            <item name="android:shadowRadius">1.0</item>
        </style>

        <style name="BaseTextStyle" parent="@style/wrap" />

        <style name="PrimaryText" parent="@style/BaseTextStyle">
            <item name="android:textColor">@color/primary_text_color</item>
        </style>

        <style name="PrimaryShadowText" parent="@style/BaseShadowTextStyle">
            <item name="android:textColor">@color/primary_text_color</item>
        </style>

        <style name="PrimaryText.Small" parent="@style/PrimaryShadowText">
            <item name="android:textSize">@dimen/text_small</item>
        </style>

        <style name="PrimaryText.Large" parent="@style/PrimaryShadowText">
            <item name="android:textSize">@dimen/text_large</item>
        </style>

        <style name="PrimaryText.Micro" parent="@style/PrimaryShadowText">
            <item name="android:textSize">@dimen/text_micro</item>
        </style>

        <style name="PrimaryText.NoShadow.SmallMedium" parent="@style/PrimaryText">
            <item name="android:textSize">@dimen/text_small_medium</item>
        </style>

        <style name="PrimaryText.NoShadow.Small" parent="@style/PrimaryText">
            <item name="android:textSize">@dimen/text_small</item>
        </style>

        <style name="Text">
            <item name="android:textSize">@dimen/text_size_standard</item>
            <item name="android:textColor">@color/text_color_standard</item>
        </style>

        <style name="Text.Caption" parent="@style/Text">
            <item name="android:textSize">@dimen/text_size_caption</item>
            <item name="android:textStyle">normal</item>
            <item name="android:textColor">@color/text_color_54</item>
        </style>

        <style name="Text.Subhead" parent="@style/Text">
            <item name="android:textSize">@dimen/text_price</item>
            <item name="android:textStyle">normal</item>
            <item name="android:textColor">@color/text_color_87</item>
        </style>
        <style name="Text.Subhead.Bold" parent="@style/Text.Subhead">
            <item name="android:textStyle">bold</item>
        </style>



        <style name="RatingBar" parent="android:style/Widget.Material.RatingBar.Small">
            <item name="colorControlNormal">@color/colorPrimary</item>
            <item name="colorControlActivated">@color/colorPrimaryDark</item>
        </style>

    </resources>
