<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerIconStyle</item>

    </style>

    <style name="DrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorAccent</item>
    </style>


    <style name="CollapsedAppBar">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="titleTextColor">@color/primaryTextColor</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">

    </style>


    <style name="wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BaseShadowTextStyle" parent="@style/wrap">
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="BaseTextStyle" parent="@style/wrap" />

    <style name="PrimaryText" parent="BaseTextStyle">
        <item name="android:textColor"> @color/primaryTextColor</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="ItemName" parent="PrimaryText">
        <item name="android:textSize">@dimen/item_name_text_size</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:maxLevel">2</item>

    </style>


    <style name="ItemPrice" parent="PrimaryText">
        <item name="android:textSize">@dimen/item_price_text_size</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>


    <style name="ItemDistance" parent="PrimaryText">
        <item name="android:textSize">@dimen/item_distance_text_size</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="ItemDescription" parent="PrimaryText">
        <item name="android:textSize">@dimen/item_description_text_size</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>


    <style name="RatingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>




</resources>
